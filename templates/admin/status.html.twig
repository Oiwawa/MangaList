{% extends 'base.html.twig' %}

{% block title %}Admin{% endblock %}

{% block body %}
    <main class="container-fluid">
        <div class="row">
            <div class="my-2 d-flex justify-content-center">
                {% form_theme statusForm 'bootstrap_4_layout.html.twig' %}
                {{ form_start(statusForm) }}
                {{ form_row(statusForm.status)}}
                <br>
                <button class="btn btn-outline-light" type="submit">Add status</button>
                {{ form_end(statusForm) }}
                <ul>
                    {% for status in statusList %}
                        <li>{{ status.status }}</li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </main>

{% endblock %}